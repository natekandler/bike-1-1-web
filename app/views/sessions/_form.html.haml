= form_for :session, url: session_path do |form|
  .text-field.form-control
    = form.label :email
    = form.text_field :email, type: 'email'

  .password-field.form-control
    = form.label :password 
    = form.password_field :password 

  .submit-field
    = form.submit "Sign In", class: "btn btn-dark-aqua"

  .other-links
    .other-buttons
      - if Clearance.configuration.allow_sign_up? 
        = link_to t(".sign_up"), sign_up_path, class: "btn btn-green"
        = link_to t(".forgot_password"), new_password_path, class: "btn btn-green"
