.nav-bar
  .logo-wrapper
    = link_to root_path do
      = image_tag "logo.png"
        
  %ul.user-nav
    - if current_user.present?
      %li
        %a#nav-dropdown-toggle.btn.no-background{href: "#"}
          Welcome #{current_user.full_name}
          %i.fa.fa-caret-down
        %ul.nav-dropdown
          %li
            = link_to "Edit Profile", edit_user_path(current_user)
          %li
            %a{href: "#"}
              option 2
          %li
            %a{href: "#"}
              option 3
    %li
      - if signed_in?
        = link_to t(".sign_out"), sign_out_path, method: :delete, class: "btn white-border"
      - else
        = link_to t("sign_in"), sign_in_path, class: "btn white-border"

#flash
  - flash.each do |key, value|
    %div{id: "flash_#{key}"}
      = value
